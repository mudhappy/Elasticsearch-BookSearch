<p id="notice"><%= notice %></p>

<h1>Results</h1>

<div class="row">
  <div class="search-content col-12">
    <div class="row">
      <%= render 'search_form' %>
    </div>
    <div class="row">
      <% if @books %>
        <% unless @books.empty? %>
          <%= render partial: 'book', collection: @books %>
        <% else %>
          <div class="col-12">
            <p class="mt-3">No hay resultados</p>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= paginate @books %>
  </div>
</div>
