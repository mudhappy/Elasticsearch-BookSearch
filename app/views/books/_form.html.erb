<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-8">
      <%= form.label(:name) %>
      <%= form.text_field(:name, class: 'form-control') %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label(:isbn) %>
      <%= form.text_field(:isbn, class: 'form-control', placeholder: '123456') %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label(:description) %>
    <%= form.text_area(:description, class: 'form-control') %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label(:pages) %>
      <%= form.text_field(:pages, class: 'form-control') %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label(:published_at) %>
      <%= form.text_field(:published_at, type: 'date', value: Date.today, class: 'form-control') %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label(:author) %>
      <%= form.collection_select(:author_id, Author.all, :id , :full_name, {:prompt=>true}, {class: 'form-control', required: true}) %>
    </div>

    <div class="form-group col-md-3">
      <%= form.label(:book_category) %>
      <%= form.collection_select(:book_category_id, BookCategory.all, :id , :title, {:prompt=>true}, {class: 'form-control', required: true}) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
